# Netlify headers file
# Allow iframe loading for same origin (our own site)

# Netlify headers file - backup cache control
/*
  X-Frame-Options: SAMEORIGIN
  X-XSS-Protection: 1; mode=block
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin
  Content-Security-Policy: default-src 'self'; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; frame-src 'self';

# No cache for main HTML files to ensure updates are seen
/*.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Minimal cache for documents with forced revalidation
/documents/*.html
  Cache-Control: public, max-age=300, must-revalidate

/documents/*
  Cache-Control: public, max-age=86400
  X-Frame-Options: SAMEORIGIN

/data/*
  Cache-Control: public, max-age=86400
  X-Frame-Options: SAMEORIGIN
