# Netlify headers file
# Security and MIME type configuration

# Global security headers
/*
  X-Frame-Options: SAMEORIGIN
  X-XSS-Protection: 1; mode=block
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin
  Content-Security-Policy: default-src 'self'; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; frame-src 'self';

# JavaScript files with proper MIME type
/js/*.js
  Content-Type: application/javascript
  Cache-Control: public, max-age=86400

# Service Worker with proper MIME type and no cache
/sw.js
  Content-Type: application/javascript
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# PWA Manifest
/manifest.json
  Content-Type: application/manifest+json
  Cache-Control: public, max-age=86400

# Icon files with proper MIME types
/icons/*.png
  Content-Type: image/png
  Cache-Control: public, max-age=604800

/icons/*.jpg
  Content-Type: image/jpeg
  Cache-Control: public, max-age=604800

/icons/*.svg
  Content-Type: image/svg+xml
  Cache-Control: public, max-age=604800

# No cache for main HTML files to ensure updates are seen
/*.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Minimal cache for documents with forced revalidation
/documents/*.html
  Cache-Control: public, max-age=300, must-revalidate
  X-Frame-Options: SAMEORIGIN

/documents/*
  Cache-Control: public, max-age=86400
  X-Frame-Options: SAMEORIGIN

/data/*
  Cache-Control: public, max-age=86400
  X-Frame-Options: SAMEORIGIN
